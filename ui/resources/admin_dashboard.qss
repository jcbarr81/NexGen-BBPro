/* Admin Dashboard Styles */
QWidget {
    background-color: #f5f5f5;
    color: #1a1a1a;
    font-family: 'Arial';
    font-size: 14px;
}

QPushButton {
    background-color: #005a9e;
    color: #ffffff;
    padding: 8px;
    border: none;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #007acc;
}

QLabel#header {
    font-size: 18px;
    font-weight: bold;
}
